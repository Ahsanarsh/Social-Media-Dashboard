# Database Configuration
# For Neon (Cloud Database) - Use this in production
DATABASE_URL=postgresql://username:password@host.region.neon.tech/database?sslmode=require

# For Local PostgreSQL - Use these for local development
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=social-media-dashboard
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your_gmail_app_password

# Client Configuration
CLIENT_URL=http://localhost:5173

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
